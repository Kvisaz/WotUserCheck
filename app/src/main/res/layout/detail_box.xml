<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- PICTURE -->
    <ImageView
        android:id="@+id/detail_picture_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
         />

    <!-- FLOATING CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TRANSPARENT WINDOW FOR PICTURE -->
        <!-- need for weight-proportional margin of content -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@dimen/weight_top"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@dimen/weight_bottom"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <include layout="@layout/output_user_info" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
